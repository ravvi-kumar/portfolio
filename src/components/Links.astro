---
import Arrow from "./Arrow.astro";

const pages = [
  {
    title: "Blog",
    href: "/blog",
  },
  {
    title: "Projects",
    href: "/projects",
  },
  {
    title: "About",
    href: "/about",
  },
];
const socials = [
  {
    title: "Twitter",
    href: "https://twitter.com/ravvi",
    icon: "twitter",
  },
  {
    title: "LinkedIn",
    href: "https://www.linkedin.com/in/ravvi/",
    icon: "linkedin",
  },
  {
    title: "GitHub",
    href: "https://github.com/ravvi",
    icon: "github",
  },
];
---

<div class="flex justify-between py-8 dark:text-white text-white">
  <div
    class="flex flex-col items-start gap-2 justify-center text-black dark:text-white text-md md:text-lg"
  >
    {
      pages.map((page) => (
        <a
          href={page.href}
          class="flex items-center justify-center text-primary font-bold text-inherit"
        >
          <Arrow height={16} width={16} /> {page.title}
        </a>
      ))
    }
  </div>
  <div class="flex"></div>
</div>
