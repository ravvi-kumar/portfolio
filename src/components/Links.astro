---
import Arrow from "./Arrow.astro";
import Github from "./Github.astro";
import Twitter from "./Twitter.astro";
import Linkedin from "./Linkedin.astro";

const pages = [
  {
    title: "Blog",
    href: "/blog",
  },
  {
    title: "Projects",
    href: "/projects",
  },
  {
    title: "About",
    href: "/about",
  },
];
const socials = [
  {
    title: "Twitter",
    href: "https://twitter.com/ravvi",
    icon: "twitter",
  },
  {
    title: "LinkedIn",
    href: "https://www.linkedin.com/in/ravi-kumar-chopra-99844727a",
    icon: "linkedin",
  },
  {
    title: "GitHub",
    href: "https://github.com/ravvi-kumar",
    icon: "github",
  },
];
---

<div
  class="flex justify-between py-8 dark:text-white text-white flex-col md:flex-row"
>
  <div
    class="flex flex-col items-start gap-2 justify-center text-black dark:text-white text-md md:text-lg pb-6"
  >
    {
      pages.map((page) => (
        <a
          href={page.href}
          class="flex items-center justify-center text-primary font-bold text-inherit"
        >
          <Arrow height={16} width={16} /> {page.title}
        </a>
      ))
    }
  </div>
  <div
    class="flex flex-col items-start gap-2 justify-center text-black dark:text-white font-sans font-semibold text-sm md:text-md"
  >
    {
      socials.map((social) => (
        <a
          href={social.href}
          class="flex items-center justify-center hover:underline"
        >
          {social.icon === "twitter" ? (
            <Twitter height={24} width={24} />
          ) : social.icon === "github" ? (
            <Github height={24} width={24} />
          ) : social.icon === "linkedin" ? (
            <Linkedin height={24} width={24} />
          ) : null}
          <span class="">{social.title}</span>
        </a>
      ))
    }
  </div>
</div>
