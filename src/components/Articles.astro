const articles = [
  {
    title: "useAsync hook",
    desc: " a simple hook to synchronize state updates without useEffect",
    createdAt: "Fri Jun 09 2023",
    img: "https://images.unsplash.com/photo-1496664444929-8c75efb9546f?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb&w=3600",
    target: "../blogs/blog-1",
  },
  {
    title: "Getting Started with zustand",
    desc: " beginners guide to understanding how zustand updates store , and reRenders components",
    createdAt: "Fri Jun 08 2023",
    img: "https://images.unsplash.com/photo-1550745165-9bc0b252726f?ixlib=rb-4.0.3&q=85&fm=jpg&crop=entropy&cs=srgb",
    target: "../blogs/blog-2",
  },
  {
    title: "Lorem ipsum dolor sit amet elit. Consequatur.",
    desc: " Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aut qui,dicta velit eaque maiores expedita tempore earum eos tempora quasi",
