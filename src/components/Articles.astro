    img: "https://picsum.photos/300/300",
    target: "#",
  },
];
---

<section aria-label="blogs" class="my-10">
  <h2 class="text-inherit text-2xl underline my-6">Blogs</h2>
  <div class="flex justify-between px-8 flex-wrap">
    {
      articles.map((article) => (
        <a
          href={article?.target}
          class="bg-white rounded-xl w-80 my-10 cursor-pointer"
        >
          <div class="h-40 w-full">
            <img
              src={article?.img}
              class="w-full h-full object-cover rounded-t-xl"
            />
          </div>
          <div class="p-4">
            <h3
              class="text-black capitalize font-extrabold text-sm md:text-base"
              style="font-family: Montserrat, sans-serif;"
            >
              {article.title}
            </h3>
            <small class="text-gray-900 text-xs font-bold">
              {article.createdAt}
            </small>
            <p
              class="text-gray-700 text-xs"
              style="font-family: Montserrat, sans-serif;"
            >
              {article.desc}
            </p>
          </div>
        </a>
      ))
    }
  </div>
</section>
