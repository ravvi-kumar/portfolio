---
const { title } = Astro.props;
---

<div class="isolate">
  <div class="noise">{title}</div>
</div>

<style>
  .noise {
    height: 100%;
    background: url("data:image/svg+xml,%3Csvg viewBox='0 0 306 306' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='2.3' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    padding: 0 16px;
  }

  .isolate {
    isolation: isolate;
    position: relative;
    border-radius: 4px;
    background-image: linear-gradient(247.23deg, #4af2c8 0%, #2f4cb3 100%);
  }
</style>
